############
# Tool_ENV - Configuration for data tools.
############
AZURE_OPENAI_ENDPOINT=https://opencsg-us.openai.azure.com
AZURE_OPENAI_API_KEY=af7aabe2e77b41b1a89452ce694658b5
OPENAI_API_VERSION=2024-02-15-preview
